---
import { getCollection } from "astro:content";
import FormattedDate from "@/components/FormattedDate";
import BaseLayout from "@/layouts/BaseLayout";

const pageTitle = "Written Archive";

const posts = (
	await getCollection("blog", ({ data }) => {
		return data.publish === true;
	})
).sort((a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf());
---

<BaseLayout>
	<main>
		<h1 class="text-right text-4xl">{pageTitle}</h1>
		<section>
			<table class="w-full text-left">
				<thead>
					<tr>
						<th>Title</th>
						<th>Date</th>
					</tr>
				</thead>
				<tbody>
					{
						posts.map((post) => (
							<tr>
								<td>
									<a href={`/blog/${post.slug}/`}>
										<h4 class="title">{post.data.title}</h4>
									</a>
								</td>
								<td>
									<FormattedDate date={post.data.publishDate} />
								</td>
							</tr>
						))
					}
				</tbody>
			</table>
			<ul></ul>
		</section>
		<hr />
		<section>
			<span>For my writing about learning Clojure in Public, check here:</span>
			<a href="/blog/clojurefam">morewriting.clj</a>
		</section>
	</main>
</BaseLayout>
