---
import { getCollection } from "astro:content";
import BaseLayout from "@/layouts/BaseLayout";
import BlogTable from "@/components/BlogTable";

const pageTitle = "Writings";

const unwantedTags = new Set(["ClojureFam", "2020", "Projects", "Blogging"]);
const posts = (
	await getCollection("blog", ({ data }) => {
		return data.publish === true;
	})
).sort((a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf());

const tags = [...new Set(posts.flatMap((post) => post.data.tags))]
	.filter((p) => !unwantedTags.has(p))
	.sort();

const clojureposts = (
	await getCollection("clojurefam", ({ data }) => {
		return data.publish === true && data.tags.includes("ClojureFam");
	})
).sort((a, b) => a.data.publishDate.valueOf() - b.data.publishDate.valueOf());
---

<BaseLayout pageTitle={pageTitle}>
	<div class='my-4 flex flex-col md:flex-row'>
		<!-- <h1 class='basis-2/3 self-start text-left text-4xl'>{pageTitle}</h1> -->
		<div class='flex basis-2/3 flex-col self-start text-left'>
			<p class='my-2 font-mono'>I've written about the following topics:&nbsp;</p><p
				class='my-2 font-mono lowercase'
			>
				{
					tags.map((tag) => (
						<span class='m-1 inline-block rounded-md bg-gray-200 px-2 py-1 text-sm hover:cursor-pointer'>
							{tag}
						</span>
					))
				}
			</p>
		</div>
		<div class='flex basis-1/3 flex-col border-l border-l-black px-3 py-1.5 text-sm text-gray-500'>
			<blockquote class='italic'>
				“And by the way, everything in life is writable about if you have the outgoing guts to do
				it, and the imagination to improvise. The worst enemy to creativity is self-doubt.”
			</blockquote>
			<p>- Sylvia Plath, <cite>The Unabridged Journals</cite></p>
		</div>
	</div>
	<hr />
	<BlogTable posts={posts} />
	<br />
	<p class='mb-2 mt-1 font-mono'>
		For my writing about learning Clojure in Public, look no further:
	</p>
	<BlogTable posts={clojureposts} />
</BaseLayout>
