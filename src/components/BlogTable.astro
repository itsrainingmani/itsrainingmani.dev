---
import FormattedDate from "@/components/FormattedDate";
import type { CollectionEntry } from "astro:content";

interface Props {
	posts: CollectionEntry<"blog">[];
}
const { posts } = Astro.props;
---

<table class="table-links w-full table-fixed border-spacing-0 text-left">
	<thead class="border border-solid border-black align-middle text-black">
		<tr>
			<th>Title</th>
			<th class="text-center">Published</th>
		</tr>
	</thead>
	<tbody>
		{
			posts.map((post) => (
				<tr>
					<td>
						<div class="flex flex-col justify-center py-2">
							<a
								class="max-w-max text-blue-500 hover:cursor-alias hover:underline hover:underline-offset-2"
								href={`/blog/${post.slug}/`}
							>
								<h4 class="title">{post.data.title}</h4>
							</a>
						</div>
					</td>
					<td class="w-1/6 text-center">
						<FormattedDate date={post.data.publishDate} />
					</td>
				</tr>
			))
		}
	</tbody>
</table>
<style>
	.table-links {
		border-collapse: 0;
		border: 0.1rem solid var(--roiro);
		box-shadow: 2px 2px var(--usuzumiiro);
	}

	.table-links > thead {
		background-color: var(--shironezu);
	}

	.table-links th {
		padding: 0.3rem 0.6rem 0;
		font-weight: 600;
		border-bottom: 0.1rem solid #000;
	}

	.table-links td {
		padding: 0.3rem 0.6rem 0;
		border-bottom: 0.1rem solid var(--usuzumiiro);
	}

	.table-links a {
		color: var(--nezuogusa);
	}

	.table-links a:hover {
		text-decoration-skip-ink: auto;
	}
</style>
